<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_flow_graph.xml"
    app:startDestination="@id/currency_list">

    <fragment
        android:id="@+id/currency_list"
        android:name="com.maventech.cryptoapp.ui.fragment.ProductListFragment"
        android:label="CurrencyListFragment"
        tools:layout="@layout/fragment_product_list">
        <action
            android:id="@+id/action_product_list_to_product_detail"
            app:destination="@id/product_detail">
            <argument
                android:name="product"
                app:argType="com.maventech.cryptoapp.model.product.Product" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/product_detail"
        android:name="com.maventech.cryptoapp.ui.fragment.ProductDetailFragment"
        android:label="ProductDetailFragment"
        tools:layout="@layout/fragment_product_detail">
        <argument
            android:name="product"
            app:argType="com.maventech.cryptoapp.model.product.Product" />

    </fragment>


</navigation>