<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <import type="java.util.List" />

        <variable
            name="data"
            type="com.maventech.cryptoapp.model.products.Data" />

        <variable
            name="index"
            type="int" />

        <variable
            name="callback"
            type="com.maventech.cryptoapp.ui.callbacks.ProductClickCallback" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="0dp"
        app:cardCornerRadius="1dp"
        card_view:cardCornerRadius="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:onClick="@{()-> callback.onClick(data)}">

            <TextView
                android:id="@+id/tv1_title"
                style="@style/text_12sp_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:text="@{data.product_name}"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toStartOf="@id/tv_fav"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_icon" />
            <TextView
                android:id="@+id/tv_price"
                style="@style/text_12sp_black"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv1_title" />
            <TextView
                android:id="@+id/tv_price_before_sale"
                style="@style/text_10sp_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@id/tv_price"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="@id/tv_price"
                app:layout_constraintBottom_toBottomOf="@id/tv_price"
                />
            <TextView
                android:id="@+id/tv_percentage_sale"
                style="@style/text_10sp_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@id/tv_price_before_sale"
                android:layout_marginStart="1dp"
                app:layout_constraintTop_toTopOf="@id/tv_price"
                app:layout_constraintBottom_toBottomOf="@id/tv_price" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorTextDarkGrey"
                app:layout_constraintStart_toStartOf="@id/tv_price_before_sale"
                app:layout_constraintEnd_toEndOf="@id/tv_price_before_sale"
                app:layout_constraintTop_toTopOf="@id/tv_price_before_sale"
                app:layout_constraintBottom_toBottomOf="@id/tv_price_before_sale"
                />
            <TextView
                android:id="@+id/tv_get_by_title"
                style="@style/text_12sp_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Get it by "
                android:layout_marginTop="2dp"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:paddingBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_price" />
            <TextView
                android:id="@+id/tv_get_by"
                style="@style/text_12sp_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:paddingBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"
                app:layout_constraintStart_toEndOf="@id/tv_get_by_title"
                app:layout_constraintTop_toBottomOf="@id/tv_price" />

            <TextView
                android:id="@+id/tv_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_icon"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/color_text_grey"
                app:layout_constraintStart_toEndOf="@id/tv1_title"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="+"/>
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitCenter"
                android:layout_margin="1dp"
                app:layout_constraintDimensionRatio="2:2.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>